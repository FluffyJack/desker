<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <%= image_tag @desk.thumbnail.url%>
  </div>
  <div class="col-md-6">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=500x325&sensor=false&zoom=16&markers=#{@desk.latitude}%2C#{@desk.longitude}" %> 
  </div>
   <div class="col-md-6">
      <h2><%= @desk.title %></h2>
      <h3><%= @desk.description %></h3>
      <p>$<%= @desk.price %>/week $<%= (@desk.price)/7 %>/day  </p>
      <p><%= @desk.address %></p>
  </div>
  <div class="col-md-6">
    <h3>Nearby desks:</h3>
      <% for desk in @desk.nearbys(20) %>
      <li><%= link_to desk.address, desk %> (<%=  desk.distance.round(2)%>km) </li>
      <% end %>
  </div>
   <div class="col-md-6">
        <%= link_to 'Edit', edit_desk_path(@desk), class: "btn btn-link" %> |
        <%= link_to 'Back', desks_path, class: "btn btn-link" %>
    </div>
</div>



