= form_tag '/login' do
  .form-group
    = label_tag :email
    = text_field_tag :email, nil, :autofocus => true, class: "form-control" 
  .form-group
    = label_tag :password
    = password_field_tag :password, nil, class: "form-control"
  .action
    = submit_tag 'Login', class: "btn btn-primary"
