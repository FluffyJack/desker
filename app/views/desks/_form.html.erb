<% @desk = @desk || Desk.new %>
<%= form_for(@desk, :html => { :multipart => true }) do |f| %>
  <% if @desk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@desk.errors.count, "error") %> prohibited this desk from being saved:</h2>

      <ul>
      <% @desk.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="btn-group" data-toggle="buttons">
    <p><b>Desk Type</b></p>
    <button class="btn btn-default active">
      <input type="radio" name="desk[desk_type]" id="option1" autocomplete="off" checked value="Hot desk"> Hot Desk
    </button>
    <button class="btn btn-default">
      <input type="radio" name="desk[desk_type]" id="option2" autocomplete="off" value="Studio"> Studio
    </button>
    <button class="btn btn-default">
      <input type="radio" name="desk[desk_type]" id="option3" autocomplete="off" value="Office"> Office
    </button>
    <button class="btn btn-default">
      <input type="radio" name="desk[desk_type]" id="option4" autocomplete="off" value="Warehouse"> Warehouse
    </button>
    <button class="btn btn-default">
      <input type="radio" name="desk[desk_type]" id="option5" autocomplete="off" value="Co-Work Space"> Co-Work Space 
    </button>
    <button class="btn btn-default">
      <input type="radio" name="desk[desk_type]" id="option6" autocomplete="off" value="Centre">Centre 
    </button>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
