<div class="row">
   <% for desk in @desks %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(desk.thumbnail), desk  %> 
         <div class="caption">
           <h3><%= desk.title %></h3>
            <h4><%= desk.description %></h2>
            <p><%= number_to_currency(desk.price) %>/week</p>
            <p><%= desk.address %></p>
             <p>Rented by: <%= desk.user.name %></p>
              <% if @current_user.present? && @current_user.id == desk.user_id %>
             <%= link_to 'Show', desk, class: "btn btn-link" %>
             <%= link_to 'Edit', edit_desk_path(desk), class: "btn btn-link" %>
              <%= link_to 'Destroy', desk, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              <% else %>
            
             <% end %>
         </div>
     </div>     
  </div>
    <% end %>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  <%= link_to 'New Desk', new_desk_path, class: "btn btn-link" %>
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New NEW</h4>
      </div>
      <div class="modal-body">
        <%= render 'desks/form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

